<% layout("/layouts/boilerplate") %>

<%# form for signup %>
<div class="row mt-3">
    <h2 class="col-6 offset-3"> Login on Wanderlust</h2>
    <div class="col-6 offset-2">
        <form  action="/login" method="POST"  class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label"> Username </label>
                <input
                name="username" 
                id="username"
                type="text" 
                class="form-control"
                required
                />
              </div>

     <div class="mb-3">
        <label for="password" class="form-label"> Password </label>
            <input
            name="password" 
            id="password"
            type="password" 
            class="form-control"
            required
             />
             <button  class="btn btn-success signup-btn mt-3"> Login </button>
          </div>
        </form>
     </div>
</div>